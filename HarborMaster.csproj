<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MailKit" Version="4.14.1" />
    <PackageReference Include="QuestPDF" Version="2025.7.4" />
    <PackageReference Include="supabase-csharp" Version="0.16.2" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude SQL files from build -->
    <None Remove="**\*.sql" />
    <Content Include="**\*.sql">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude OldImplementation folder from compilation (kept for reference only) -->
    <Compile Remove="OldImplementation\**" />
    <EmbeddedResource Remove="OldImplementation\**" />
    <None Remove="OldImplementation\**" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude Archives folder from compilation (archived implementations) -->
    <Compile Remove="Archives\**" />
    <EmbeddedResource Remove="Archives\**" />
    <None Remove="Archives\**" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Controller\" />
    <Folder Include="Test\" />
  </ItemGroup>

</Project>